# Google OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Optional: Google Maps REST API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Optional: Firebase service account (skip if not using Firebase yet)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@example.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nABC123...\\n-----END PRIVATE KEY-----\\n"

# Optional: Set a custom port for the Express server (defaults to 3000)
PORT=3000

# Google Cloud client libraries typically rely on GOOGLE_APPLICATION_CREDENTIALS
# pointing to the JSON key file for vision/translation/homegraph access.
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json


